{

    "compilerOptions": {
        "lib": ["esnext"],
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "CommonJS",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
         },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}